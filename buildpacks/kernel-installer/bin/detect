#!/usr/bin/env bash
set -eo pipefail

# 1. GET ARGS
plan_path=$2

# 2. DECLARE DEPENDENCIES (OPTIONAL)

cat >>"${plan_path}" <<EOL
[[requires]]
name = "pip"

[requires.metadata]
launch = false

[[requires]]
name = "jupyter-kernel"

[requires.metadata]
launch = true

[[provides]]
name = "jupyter-kernel"
EOL
