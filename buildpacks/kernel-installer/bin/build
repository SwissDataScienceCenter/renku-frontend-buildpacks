#!/usr/bin/env bash
set -eo pipefail

echo "=== Renku kernel installer buildpack ==="

layers_dir=$1
cache_layer_dir=${layers_dir}/cache
kernel_layer_dir=${layers_dir}/kernel
python_version=python$(python --version | cut -d' ' -f2)
site_packages=$kernel_layer_dir/lib/${python_version%.*}/site-packages
export PYTHONPATH=$site_packages:$PYTHONPATH
env_dir=${kernel_layer_dir}/env.launch
mkdir -p "${cache_layer_dir}"
mkdir -p "${kernel_layer_dir}"
mkdir -p "${env_dir}"

pip install --prefix="${kernel_layer_dir}" --cache-dir="${cache_layer_dir}" ipykernel
jupyter_path="${kernel_layer_dir}/share/jupyter/"
python -m ipykernel install --prefix="${kernel_layer_dir}" --name=python3

printf ':' >"${env_dir}/JUPYTER_PATH.delim"
printf '%s' "${jupyter_path}" >"${env_dir}/JUPYTER_PATH.prepend"

printf ':' >"${env_dir}/PYTHONPATH.delim"
printf '%s' "${site_packages}" >"${env_dir}/PYTHONPATH.prepend"

cat >"${cache_layer_dir}.toml" <<EOL
[types]
cache = true
EOL

cat >"${kernel_layer_dir}.toml" <<EOL
[types]
cache = true
launch = true
EOL
