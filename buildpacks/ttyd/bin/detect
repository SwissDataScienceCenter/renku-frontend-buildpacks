#!/usr/bin/env bash
set -eo pipefail

if [[ "${BP_RENKU_FRONTENDS}" =~ "ttyd" ]]; then
  echo "PASS: The BP_RENKU_FRONTENDS environment variable was found to contain ttyd."
else
  echo "SKIPPED: The BP_RENKU_FRONTENDS environment variable is not set or does not contain ttyd."
  exit 100
fi

cat >"${CNB_BUILD_PLAN_PATH}" <<EOL
[[provides]]
  name = "ttyd"

[[requires]]
  name = "renku-env"

[requires.metadata]
  launch = true

[[requires]]
  name = "ttyd"

[requires.metadata]
  launch = true
EOL
