#!/usr/bin/env bash
set -eo pipefail

if [[ "${BP_RENKU_FRONTENDS}" =~ "vscodium" ]]; then
  echo "PASS: The BP_RENKU_FRONTENDS environment variable was found to contain vscodium."
else
  echo "SKIPPED: The BP_RENKU_FRONTENDS environment variable is not set or does not contain vscodium."
  exit 100
fi

cat >"${CNB_BUILD_PLAN_PATH}" <<EOL
[[provides]]
  name = "vscodium"

[[requires]]
  name = "vscodium"

[requires.metadata]
  launch = true

[[requires]]
  name = "renku-env"

[requires.metadata]
  launch = true
EOL
