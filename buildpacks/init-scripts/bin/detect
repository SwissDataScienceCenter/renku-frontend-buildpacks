#!/usr/bin/env bash
set -eo pipefail

# 1. GET ARGS
plan_path=$2

if ls .init/*.sh 1>/dev/null 2>&1; then
  echo "PASS: .init folder found"
else
  echo "SKIPPED: No .sh files in .init folder or no .init folder"
  exit 100
fi

cat >>"${plan_path}" <<EOL
[[provides]]
name = "init-scripts"

[[requires]]
name = "init-scripts"

[requires.metadata]
launch = true

[[requires]]
name = "renku-env"

[requires.metadata]
launch = true
EOL
