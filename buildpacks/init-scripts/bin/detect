#!/usr/bin/env bash
set -eo pipefail

echo "Checking if init scripts should be installed..."

# 1. GET ARGS
plan_path=$2

if [[ ! -d .init ]]; then
  echo No .init folder, not participating
  exit 100
else
  echo .init folder found, participating
fi

cat >>"${plan_path}" <<EOL
[[provides]]
name = "init-scripts"

[[requires]]
name = "init-scripts"

[requires.metadata]
launch = true

[[requires]]
name = "renku-env"

[requires.metadata]
launch = true
EOL
