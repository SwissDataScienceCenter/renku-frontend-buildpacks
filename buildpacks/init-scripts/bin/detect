#!/usr/bin/env bash
set -eo pipefail

echo "Checking if init scripts should be installed..."

# 1. GET ARGS
plan_path=$2

if ls .init/*.sh 1>/dev/null 2>&1; then
  echo .init folder found, participating
else
  echo No .sh files in .init folder or no .init folder, not participating
  exit 100
fi

cat >>"${plan_path}" <<EOL
[[provides]]
name = "init-scripts"

[[requires]]
name = "init-scripts"

[requires.metadata]
launch = true

[[requires]]
name = "renku-env"

[requires.metadata]
launch = true
EOL
